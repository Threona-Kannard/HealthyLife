<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/average_time"
        android:text="0.00"
        android:textSize="40dp"
        android:textAlignment="center">
    </TextView>
    <LinearLayout
        android:id="@+id/padding_view"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/loginText">
        <View
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:outlineSpotShadowColor="@color/browser_actions_bg_grey"
            android:outlineAmbientShadowColor="@color/browser_actions_bg_grey"
            android:background="#002200"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_usage_graph"
        android:text="Phone Time Usage Graph"
        android:textSize="30dp"
        android:textAlignment="center"/>
    <com.jjoe64.graphview.GraphView
        android:layout_width = "match_parent"
        android:layout_height = "200dip"
        android:id = "@+id/graph"/>
</LinearLayout>